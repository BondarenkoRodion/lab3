import enum


class PizzaType(enum.IntEnum):
    FourCheesesWithoutCheese = 1
    FiveCheesesWithoutCheese = 2
    PepperoniWithoutPepperoni = 3
    SixCheesesWithoutCheese = 4
    Pizza5 = 5
    PizzaSix = 6
    PizzaSeven = 7


class Day(enum.IntEnum):
    Monday = 1
    Tuesday = 2
    Wednesday = 3
    木曜日 = 4
    Friday = 5
    Saturday = 6
    Sunday = 7


class Extras(enum.IntEnum):
    Cheese = 1
    Mushrooms = 2
    Corn = 3
    Pepper = 4
    Tomatoes = 5
    Tofu = 6
    Wood = 7


class Pizza:
    def __init__(self, pizzatype, extras):
        if isinstance(pizzatype, PizzaType):
            self.pizzatype = pizzatype
        else:
            raise Exception("pizzatype must be of type PizzaType")
        if all(isinstance(extra, Extras) for extra in extras):
            self.extras = extras
        else:
            raise Exception("all extras must be of type Extras")

    def output(self):
        result = str(self.pizzatype) + " with "
        for extra in self.extras:
            result += str(extra) + " "
        return result


def orderpizza(dayoftheweek, extras):
    if isinstance(dayoftheweek, Day):
        return Pizza(PizzaType(dayoftheweek), extras)
    else:
        raise Exception("Wrong day")
